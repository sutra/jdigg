<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.redv.jdigg.domain">
	<class name="Story" table="story">
		<id name="id" type="java.lang.String" length="32">
			<generator class="uuid" />
		</id>
		<property name="url" unique="true" index="url" update="false" />
		<property name="title" length="75" update="false" />
		<property name="body" length="350" update="false" />
		<property name="date" type="timestamp" update="false" />
		<property name="rank" />
		<many-to-one name="digger" not-null="true" update="false" />
	</class>
</hibernate-mapping>